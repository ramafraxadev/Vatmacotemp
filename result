import { mount, flushPromises } from '@vue/test-utils'
import { describe, it, beforeEach, afterEach, expect, vi } from 'vitest'
import { createPinia, setActivePinia } from 'pinia'
import { useFacturationDocumentsStore } from '@/stores/facturation/store-facturation-documents'
import DocumentsTelechargementZip from '../DocumentsTelechargementZip.vue'

// Données factices
const mockDonnee = {
  id: 1,
  archive: 'Archive_Test_123.zip'
}

describe('DocumentsTelechargementZip.vue', () => {
  let wrapper
  let mockTelecharger
  let mockNotify

  beforeEach(() => {
    // Crée un store Pinia de test
    setActivePinia(createPinia())

    // Mock du store et de la fonction de téléchargement
    const store = useFacturationDocumentsStore()
    mockTelecharger = vi.spyOn(store, 'action__facturationDocuments_telechargerArchive')
    mockTelecharger.mockResolvedValueOnce()

    // Mock de la notification injectée
    mockNotify = {
      error: vi.fn(),
      success: vi.fn(),
    }

    // Monte le composant
    wrapper = mount(DocumentsTelechargementZip, {
      props: {
        documentsTelechargementZipDonnee: mockDonnee,
      },
      global: {
        provide: {
          $mcNotify: mockNotify,
        },
        stubs: ['mc-button', 'mc-link'],
      },
    })
  })

  afterEach(() => {
    vi.clearAllMocks()
  })

  it('affiche le nom de l’archive', () => {
    expect(wrapper.html()).toContain('Archive_Test_123.zip')
  })

  it('appelle la méthode de téléchargement quand on clique sur "Télécharger"', async () => {
    // simule le clic
    const button = wrapper.find('[test-id="test_dtzt"]')
    await button.trigger('button-click')
    await flushPromises()

    expect(mockTelecharger).toHaveBeenCalledOnce()
    expect(mockTelecharger).toHaveBeenCalledWith('Archive_Test_123.zip')
  })

  it('émet un événement "DocumentsTelechargementZipAnnulerEmise" quand on clique sur Annuler', async () => {
    const buttonCancel = wrapper.find('[test-id="test_dtza"]')
    await buttonCancel.trigger('button-click')

    const emitted = wrapper.emitted('DocumentsTelechargementZipAnnulerEmise')
    expect(emitted).toBeTruthy()
    expect(emitted[0]).toEqual([])
  })

  it('appelle $mcNotify.error si le téléchargement échoue', async () => {
    mockTelecharger.mockRejectedValueOnce(new Error('Erreur de téléchargement'))

    const button = wrapper.find('[test-id="test_dtzt"]')
    await button.trigger('button-click')
    await flushPromises()

    expect(mockNotify.error).toHaveBeenCalledWith('Erreur de téléchargement')
  })
})

